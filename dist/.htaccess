<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Força a limpeza de cache para o arquivo principal
  <FilesMatch "\.(html|htm|js|css)$">
    FileETag None
    <IfModule mod_header.c>
       Header unset ETag
       Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
       Header set Pragma "no-cache"
       Header set Expires "Wed, 11 Jan 1984 05:00:00 GMT"
    </IfModule>
  </FilesMatch>

  # Se o arquivo existe (ex: imagem, arquivo php), serve ele
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Se for API e não for um arquivo existente, deixa o Node.js cuidar através do index.html ou proxy
  # Na Hostinger Node.js, o servidor costuma capturar o tráfego se não for arquivo estático.
  
  # Caso contrário, manda tudo para o index.html (React handles routing)
  RewriteRule ^ index.html [L]
</IfModule>
